<!DOCTYPE html>
<html>

<head>
    <title>3D Model</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/styles/style.css">
    <script type="importmap">
    {
      "imports": {
        "three": "https://cdn.jsdelivr.net/npm/three@0.181.2/build/three.module.js",
        "three/addons/": "https://cdn.jsdelivr.net/npm/three@0.181.2/examples/jsm/"
      }
    }
    </script>
</head>

<body>
    <header>
        <nav>
            <div class="nav-buttons">
                <button class="button">Full screen</button>
                <button class="button">Achievments</button>
            </div>
            <button id="startButton" class="button">Start</button>
            <div class="nav-buttons">
                <button class="button">Settings</button>
                <button class="button">Exit</button>
            </div>
        </nav>
    </header>

    <main>
        <div id="classPicker">
            <button>Warrior</button>
            <button>Archer</button>
            <button>Mage</button>
            <button>Paladin</button>
            <div id="abilityPicker">
                <button>Ability1</button>
                <button>Ability2</button>
                <button>Ability3</button>
                <button>Ability4</button>
                <button>Ability5</button>
            </div>
        </div>

        <canvas id="canvas"></canvas>
    </main>

    <footer></footer>
    <script type="module" src="/js/main.js"></script>
</body>

</html>
